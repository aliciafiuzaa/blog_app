<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.name %>:</strong>
          <%= comment.user_comment %>
        </p>
      </div>
    </div>
    <%= link_to "Delete", [comment.post, comment], method: :delete, class: "button is-danger", data: { confirm: "Are you sure you want to delete this comment?" } %>
  </article>
</div>
